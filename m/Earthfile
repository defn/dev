VERSION 0.7

build:
    FROM quay.io/defn/dev:latest-nix-installed 
    ENTRYPOINT ["/home/ubuntu/.nix-profile/bin/nix", "develop", "--command", "bash", "-c", "make build; bash -il"]
    RUN echo source $HOME/.nix-profile/share/nix-direnv/direnvrc > /home/ubuntu/.direnvrc
    COPY . .
    RUN direnv allow
    SAVE IMAGE meh