{
  "variable": {
    "envs": [
      {
        "default": {}
      }
    ],
    "repo": [
      {
        "default": "169.254.32.1:5000/"
      }
    ]
  },
  "data": {
    "kubernetes_config_map": {
      "cluster_dns": [
        {
          "metadata": [
            {
              "name": "cluster-dns",
              "namespace": "kube-system"
            }
          ]
        }
      ]
    }
  },
  "resource": {
    "kubernetes_stateful_set": {
      "dev": [
        {
          "for_each": "${var.envs}",
          "wait_for_rollout": false,
          "metadata": [
            {
              "name": "${each.key}",
              "namespace": "default"
            }
          ],
          "spec": [
            {
              "service_name": "dev",
              "replicas": 1,
              "selector": [
                {
                  "match_labels": {
                    "app": "dev",
                    "env": "${each.key}"
                  }
                }
              ],
              "template": [
                {
                  "metadata": [
                    {
                      "annotations": {
                        "kuma.io/gateway": "enabled",
                        "kuma.io/sidecar-injection": "disabled",
                        "eks.amazonaws.com/role-arn": "arn:aws:iam::319951235442:role/karpenter",
                        "eks.amazonaws.com/audience": "sts.amazonaws.com",
                        "eks.amazonaws.com/sts-regional-endpoints": "true",
                        "eks.amazonaws.com/token-expiration": "86400"
                      },
                      "labels": {
                        "app": "dev",
                        "env": "${each.key}"
                      }
                    }
                  ],
                  "spec": [
                    {
                      "service_account_name": "dev",
                      "security_context": [
                        {
                          "fs_group": 1000
                        }
                      ],
                      "dns_policy": "None",
                      "affinity": [
                        {
                          "node_affinity": [
                            {
                              "required_during_scheduling_ignored_during_execution": [
                                {
                                  "node_selector_term": [
                                    {
                                      "match_expressions": [
                                        {
                                          "key": "env",
                                          "operator": "In",
                                          "values": ["${each.key}"]
                                        }
                                      ]
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ],
                      "volume": [
                        {
                          "host_path": [
                            {
                              "path": "/mnt/registry"
                            }
                          ],
                          "name": "registry"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/mnt/dind"
                            }
                          ],
                          "name": "dind"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/mnt/earthly"
                            }
                          ],
                          "name": "earthly"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/var/run/docker.sock"
                            }
                          ],
                          "name": "docker"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/run/k3s/containerd"
                            }
                          ],
                          "name": "containerd"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/mnt/work"
                            }
                          ],
                          "name": "mntwork"
                        },
                        {
                          "host_path": [
                            {
                              "path": "/var/lib/tailscale/pod/var/lib/tailscale"
                            }
                          ],
                          "name": "tailscale"
                        },
                        {
                          "empty_dir": [{}],
                          "name": "tsrun"
                        }
                      ],
                      "container": [
                        {
                          "name": "code-server",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "while true; do if test -S /var/run/tailscale/tailscaled.sock; then break; fi; sleep 1; done; sudo tailscale up --ssh --accept-dns=false --hostname=${each.key}-0; ~/bin/e make nix; while true; do ~/bin/e de ~ code-server --bind-addr 0.0.0.0:8888 --disable-telemetry; sleep 5; done"
                          ],
                          "security_context": [
                            {
                              "privileged": true,
                              "capabilities": {
                                "add": ["NET_ADMIN", "SYS_MODULE"]
                              }
                            }
                          ],
                          "volume_mount": [
                            {
                              "mount_path": "/var/run/docker.sock",
                              "name": "docker"
                            },
                            {
                              "mount_path": "/run/containerd",
                              "name": "containerd"
                            },
                            {
                              "mount_path": "/work",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "nix",
                              "mount_path": "/nix",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "node_modules",
                              "mount_path": "/home/ubuntu/node_modules",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "config-gcloud",
                              "mount_path": "/home/ubuntu/.config/gcloud",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "config-gh",
                              "mount_path": "/home/ubuntu/.config/gh",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "config-precommit",
                              "mount_path": "/home/ubuntu/.cache/pre-commit",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "config-fly",
                              "mount_path": "/home/ubuntu/.fly",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "config-temporalite",
                              "mount_path": "/home/ubuntu/.config/temporalite",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "terraform-cache",
                              "mount_path": "/home/ubuntu/.terraform.d/plugin-cache",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "go-build",
                              "mount_path": "/home/ubuntu/.cache/go-build",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "code-server-cache/extensions",
                              "mount_path": "/home/ubuntu/.local/share/code-server/extensions",
                              "name": "mntwork"
                            },
                            {
                              "sub_path": "code-server-cache/CachedExtensionVSIXs",
                              "mount_path": "/home/ubuntu/.local/share/code-server/CachedExtensionVSIXs",
                              "name": "mntwork"
                            },
                            {
                              "mount_path": "/var/run/tailscale",
                              "name": "tsrun"
                            },
                            {
                              "sub_path": "vault-agent",
                              "mount_path": "/vault-agent",
                              "name": "mntwork"
                            }
                          ],
                          "tty": true,
                          "env": [
                            {
                              "name": "DEFN_DEV_HOST",
                              "value": "${each.value.host}"
                            },
                            {
                              "name": "PASSWORD",
                              "value": "admin"
                            }
                          ]
                        },
                        {
                          "name": "vault",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "exec ~/bin/e vault server -config etc/vault.yaml"
                          ],
                          "volume_mount": [
                            {
                              "mount_path": "/work",
                              "name": "mntwork"
                            }
                          ]
                        },
                        {
                          "name": "vault-agent",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "exec ~/bin/e env VAULT_ADDR=http://localhost:8200 vault agent -config etc/vault-agent.yaml"
                          ],
                          "volume_mount": [
                            {
                              "sub_path": "vault-agent",
                              "mount_path": "/vault-agent",
                              "name": "mntwork"
                            }
                          ]
                        },
                        {
                          "name": "caddy",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "exec ~/bin/e sudo $(~/bin/e which caddy) run"
                          ],
                          "volume_mount": [
                            {
                              "mount_path": "/work/dist",
                              "name": "mntwork",
                              "sub_path": "dist"
                            },
                            {
                              "mount_path": "/var/run/tailscale",
                              "name": "tsrun"
                            }
                          ]
                        },
                        {
                          "name": "tailscale",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "sudo",
                            "tailscaled",
                            "--statedir",
                            "/var/lib/tailscale"
                          ],
                          "security_context": [
                            {
                              "privileged": true
                            }
                          ],
                          "volume_mount": [
                            {
                              "mount_path": "/work",
                              "name": "mntwork"
                            },
                            {
                              "mount_path": "/var/run/tailscale",
                              "name": "tsrun"
                            },
                            {
                              "mount_path": "/var/lib/tailscale",
                              "name": "tailscale"
                            }
                          ]
                        },
                        {
                          "name": "coredns",
                          "image": "${var.repo}workspace:latest",
                          "image_pull_policy": "Always",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "exec sudo ~/bin/e $(~/bin/e which coredns)"
                          ]
                        },
                        {
                          "name": "cloudflared",
                          "image": "${var.repo}workspace:latest",
                          "command": ["/usr/bin/tini", "--"],
                          "args": [
                            "bash",
                            "-c",
                            "exec ~/bin/e cloudflared proxy-dns --port 5553"
                          ],
                          "image_pull_policy": "Always"
                        },
                        {
                          "name": "buildkit",
                          "image": "earthly/buildkitd:v0.6.29",
                          "image_pull_policy": "IfNotPresent",
                          "command": ["sh", "-c"],
                          "args": [
                            "awk '/if.*rm.*data_root.*then/ {print \"rm -rf $data_root || true; data_root=/tmp/meh;\" }; {print}' /var/earthly/dockerd-wrapper.sh \u003e /tmp/1 \u0026\u0026 chmod 755 /tmp/1 \u0026\u0026 mv -f /tmp/1 /var/earthly/dockerd-wrapper.sh; exec /usr/bin/entrypoint.sh buildkitd --config=/etc/buildkitd.toml"
                          ],
                          "volume_mount": [
                            {
                              "mount_path": "/tmp/earthly",
                              "name": "earthly"
                            }
                          ],
                          "tty": true,
                          "security_context": [
                            {
                              "privileged": true
                            }
                          ],
                          "env": [
                            {
                              "name": "BUILDKIT_TCP_TRANSPORT_ENABLED",
                              "value": "true"
                            },
                            {
                              "name": "BUILDKIT_MAX_PARALLELISM",
                              "value": "4"
                            },
                            {
                              "name": "CACHE_SIZE_PCT",
                              "value": "90"
                            },
                            {
                              "name": "EARTHLY_ADDITIONAL_BUILDKIT_CONFIG",
                              "value": "[registry.\"169.254.32.1:5000\"]\n  http = true\n  insecure = true"
                            }
                          ]
                        }
                      ],
                      "dns_config": [
                        {
                          "nameservers": ["127.0.0.1"],
                          "option": [
                            {
                              "name": "ndots",
                              "value": 5
                            }
                          ],
                          "searches": [
                            "default.svc.cluster.local",
                            "svc.cluster.local",
                            "cluster.local"
                          ]
                        }
                      ],
                      "toleration": [
                        {
                          "key": "env",
                          "operator": "Equal",
                          "value": "${each.key}"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "kubernetes_service_account": {
      "dev": [
        {
          "metadata": [
            {
              "name": "dev",
              "namespace": "default",
              "annotations": {
                "eks.amazonaws.com/audience": "sts.amazonaws.com",
                "eks.amazonaws.com/role-arn": "arn:aws:iam::319951235442:role/karpenter",
                "eks.amazonaws.com/sts-regional-endpoints": "true",
                "eks.amazonaws.com/token-expiration": "86400"
              }
            }
          ]
        }
      ]
    },
    "kubernetes_cluster_role_binding": {
      "dev_admin": [
        {
          "metadata": [
            {
              "name": "dev-admin"
            }
          ],
          "role_ref": [
            {
              "api_group": "rbac.authorization.k8s.io",
              "kind": "ClusterRole",
              "name": "cluster-admin"
            }
          ],
          "subject": [
            {
              "kind": "ServiceAccount",
              "name": "dev",
              "namespace": "default"
            }
          ]
        }
      ],
      "dev_delegator": [
        {
          "metadata": [
            {
              "name": "dev-delegator"
            }
          ],
          "role_ref": [
            {
              "api_group": "rbac.authorization.k8s.io",
              "kind": "ClusterRole",
              "name": "system:auth-delegator"
            }
          ],
          "subject": [
            {
              "kind": "ServiceAccount",
              "name": "default",
              "namespace": "default"
            }
          ]
        }
      ]
    },
    "kubernetes_service": {
      "control": [
        {
          "metadata": [
            {
              "name": "control-0",
              "namespace": "default"
            }
          ],
          "spec": [
            {
              "selector": {
                "env": "control"
              },
              "type": "LoadBalancer",
              "port": [
                {
                  "name": "http",
                  "port": 80,
                  "target_port": 80
                },
                {
                  "name": "https",
                  "port": 443,
                  "target_port": 443
                },
                {
                  "name": "gcloud",
                  "port": 18085,
                  "target_port": 18085
                },
                {
                  "name": "temporal",
                  "port": 7233,
                  "target_port": 7233
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
