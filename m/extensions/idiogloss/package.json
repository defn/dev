{
  "name": "idiogloss",
  "displayName": "idiogloss",
  "description": "AI-powered code assistant for your IDE",
  "version": "0.0.1",
  "publisher": "defn",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "idiogloss.openPanel",
        "title": "idiogloss: Open Global Panel"
      },
      {
        "command": "idiogloss.openEditorPanel",
        "title": "idiogloss: Open Editor Panel",
        "icon": {
          "light": "media/icon-light.png",
          "dark": "media/icon-dark.png"
        }
      },
      {
        "command": "idiogloss.startAgent",
        "title": "idiogloss: Start Agent Server"
      },
      {
        "command": "idiogloss.stopAgent",
        "title": "idiogloss: Stop Agent Server"
      },
      {
        "command": "idiogloss.queryAgent",
        "title": "idiogloss: Query Agent"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "idiogloss.openEditorPanel",
          "group": "navigation",
          "when": "editorFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "idiogloss.openPanel",
        "key": "ctrl+meta+backspace",
        "mac": "ctrl+cmd+backspace",
        "when": "editorFocus"
      },
      {
        "command": "idiogloss.openEditorPanel",
        "key": "meta+backspace",
        "mac": "cmd+backspace",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc",
    "compile:webview": "vite build webview",
    "build": "pnpm compile && pnpm compile:webview",
    "watch": "tsc -w",
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "use": "turbo run build --filter=idiogloss && pnpm package && code --install-extension idiogloss-*.vsix"
  },
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^25.0.6",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.7.1",
    "svelte": "^5.46.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
