#!/usr/bin/env bash

function main {
	set -efu

	for a in {x86_64,aarch64}-{linux,darwin}; do
		echo $a $(nix build ".#$a" 2>&1 | grep got: | awk '{print $2}') &
	done | while read -r system sha; do
		if test -n "$sha"; then
			perl -pe "s{(sha256-[^\"]+)}{$sha} if m{# $system}" -i flake.nix
		fi
	done

	n test
}

source sub "$0" "$@"
