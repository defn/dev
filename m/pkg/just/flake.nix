      };
      "aarch64-linux" = {
        os = "unknown-linux-musl";
        arch = "aarch64";
        sha256 = "sha256-BJ1iQlXRUPGLDzoSV6FjNmsNwi4WUmIUdzkDElFF5RU="; # aarch64-linux
      };
      "x86_64-darwin" = {
        os = "apple-darwin";
        arch = "x86_64";
        sha256 = "sha256-803ledgrCdWOmlV1kWbX1WQrw0iT4LPVPSyj9+hB0cs="; # x86_64-darwin
      };
      "aarch64-darwin" = {
        os = "apple-darwin";
