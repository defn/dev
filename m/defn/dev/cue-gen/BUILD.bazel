filegroup(
    name = "make_cue_gen_script",
    srcs = ["make_cue_gen.sh"],
)

filegroup(
    name = "go_mod",
    srcs = [
        "go.mod",
        "go.sum",
    ],
)

genrule(
    name = "build_cue_gen_binary",
    srcs = [
        "go_mod",
        "//pkg/godev:flake_go",
    ],
    outs = ["cue-gen"],
    cmd = "$(location make_cue_gen_script) $(location //pkg/godev:flake_go) $@",
    tools = ["make_cue_gen_script"],
)
