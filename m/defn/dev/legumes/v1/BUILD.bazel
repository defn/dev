    name = "v1_go_proto",
    compilers = ["@io_bazel_rules_go//proto:go_grpc"],
    importpath = "github.com/defn/dev/m/defn/dev/legumes/v1",
    proto = ":v1_proto",
    visibility = ["//visibility:public"],
)

go_library(
    name = "legumes",
    embed = [":v1_go_proto"],
    importpath = "github.com/defn/dev/m/defn/dev/legumes/v1",
    visibility = ["//visibility:public"],
)
