{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "@defn/demo#build": {
      "outputs": ["dist/**"],
      "inputs": ["pepr.ts", "capabilities/**", "package.json", "tsconfig.json"]
    },
    "idiogloss#build": {
      "outputs": ["out/**", "dist/**"],
      "inputs": ["src/**", "webview/**", "package.json", "tsconfig.json"]
    }
  }
}
