VERSION 0.8

build:
    ARG image
    BUILD +build-operator --image=${image}

build-operator:
    ARG image
    BUILD +image-operator --image=${image}

image-operator:
    ARG image

    FROM quay.io/defn/dev:latest-shell-operator

    RUN apt update && apt install -y jq

    COPY hooks /hooks

    SAVE IMAGE --push ${image}
