VERSION 0.8

build:
    ARG image
    BUILD +image-operator --image=${image}

build-operator:
    FROM ghcr.io/defn/dev:latest-shell-operator

    RUN apt update && apt install -y jq

image-operator:
    FROM +build-operator

    ARG image

    COPY hooks /hooks

    COPY store /nix/store
    COPY gen/cli.bin /cli

    SAVE IMAGE --push ${image}
