python -mvenv venv
source venv/bin/activate
pip install certbot certbot-dns-cloudflare
cp cloudflare.ini.example cloudflare.init
certbot certonly --dns-cloudflare --dns-cloudflare-credentials cloudflare.ini -d '*.kowloon.defn.run' --config-dir . --work-dir . --logs-dir .

select a name, i.e. kowloon
create github app at https://github.com/organizations/defn/settings/applications
use homepage https://coder.school.amanibhavam.defn.run
callback https://coder.school.amanibhavam.defn.run/api/v2/users/oauth2/github/callback

create *.kowloon.defn.run to server Tailscale IP

export coder_oauth2_github_allowed_orgs=defn
export coder_oauth2_github_allowed_teams=defn/dev
export coder_oauth2_github_client_id_kowloon=
export coder_oauth2_github_client_secret_kowloon=

cd
make chrome-dev-coder name=kowloon

https://coder.kowloon.defn.run/api/v2/users/oauth2/github/callback


sudo apt install -y socat
make chrome-dev-socat
