#!/usr/bin/env python

# fuck off
analytics_settings(False)

load("ext://restart_process", "custom_build_with_restart")

# local registry
default_registry("169.254.32.1:5000")

# code-server
local_resource(
    "code-server",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m
            exec code-server --auth none --port 13337
            """,
    ],
)

# buildkite
local_resource(
    "buildkite",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m
            make ci timeout=3600
            """,
    ],
)

# frontend
local_resource(
    "frontend",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m/w
            $(MAKE) install
            npx pnpm dev
            """,
    ],
)

# api deploy
k8s_yaml(local("cd cmd && make manifest"))

# api service
k8s_resource("api", resource_deps=["cli"])

# api build
local_resource(name="cli", cmd="make build", deps=["./cmd", "./command"])

# api update
custom_build_with_restart(
    ref="api",
    command="make image tag=$EXPECTED_REF",
    deps=["/tmp/cli"],
    trigger=["/tmp/cli"],
    entrypoint=["/cli"],
    live_update=[
        sync("/tmp/cli", "/app"),
    ],
)
