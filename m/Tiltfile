analytics_settings(False)

# buildkite
local_resource("buildkite",
    serve_cmd=["make", "ci"])

# buf generate
local_resource(
    "buf-generate",
    cmd=["bash", "-c", "cd a && buf generate"],
    deps=[
        "a/google/protobuf/duration.proto",
        "a/google/type/datetime.proto",
        "a/rock/v1/rock.proto",
        "a/demo/v1/pet.proto",
        "a/legumes/v1/bean.proto",
        "a/legumes/v1/pea.proto"
    ])

if "-linux" in os.getenv("system"):
    local_resource("tailscale",
        serve_cmd=[ "bash", "-c", """
            exec sudo "$(which tailscaled)" "$@"
            """ ]
    )
