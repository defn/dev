#!/usr/bin/env python

# fuck off
analytics_settings(False)

load("ext://restart_process", "custom_build_with_restart")

# local registry
default_registry("169.254.32.1:5000")

# code-server
local_resource(
    "code-server",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m
            exec code-server --auth none --port 13337
            """,
    ],
)

# frontend
local_resource(
    "frontend",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m/w
            make install
            npx pnpm dev
            """,
    ],
)

# coder
local_resource(
    "coder",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd ~/m
            make dev
            """,
    ],
)

# api initial deploy
# TODO replace with cue export
k8s_yaml(local("cd cmd && make manifest"))

# api service selected from deploy
k8s_resource("api", resource_deps=["cli"])

# api builds when cmd/, command/ changes
local_resource(name="cli", cmd="make build", deps=["./cmd", "./command"])

# api updates when api builds
custom_build_with_restart(
    ref="api",
    command="make image tag=$EXPECTED_REF",
    deps=["/tmp/cli"],
    trigger=["/tmp/cli"],
    entrypoint=["/cli"],
    live_update=[
        sync("/tmp/cli", "/app"),
    ],
)
