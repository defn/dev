#!/usr/bin/env python

load("ext://restart_process", "custom_build_with_restart")

# local registry
default_registry("169.254.32.1:5000")

# code-server
local_resource(
    "code-server",
    serve_cmd=[
        "bash",
        "-c",
        """
            cd
            source .bash_profile
            cd ~/m/pkg/codeserver
            exec nix develop --command code-server --auth none --port 13337
        """,
    ],
)
