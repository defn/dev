#!/usr/bin/env bash

function main {
	set -exfu
	STARSHIP_PREEXEC_READY=

	if [[ "$(whoami || true)" == "ubuntu" ]]; then
		cd
		git pull

		set +xu
		source .bash_profile
		set -xu

		git config --global user.email "you@example.com"
		git config --global user.name "Your Name"
		make install
		git checkout .

		make play
		make upgrade

		exit $?
	fi
}

main "$@"
