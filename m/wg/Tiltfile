#!/usr/bin/env python

load("../common/Tiltfile", "main")

local_resource(
    "build",
    serve_cmd=[
        "bash",
        "-c",
        """
            exec make build
        """,
    ],
)

local_resource(
    "server",
    serve_cmd=[
        "bash",
        "-c",
        """
            exec make server
        """,
    ],
    deps=[
        "../bazel-bin/wg/wg_/wg"
    ]
)

local_resource(
    "client",
    serve_cmd=[
        "bash",
        "-c",
        """
            while true; do
                make client
                sleep 60
            done
        """,
    ],
    deps=[
        "../bazel-bin/wg/wg_/wg"
    ]
)
