{
	"image": "ghcr.io/defn/dev:latest-devcontainer",
	"customizations": {
		"vscode": {
			"extensions": [
				"vscodevim.vim"
			]
		}
	},
  "mounts": [
    "source=${localEnv:HOME}/work,target=/workspaces,type=bind,consistency=delegated",
    "source=work,target=/work",
    "source=nix,target=/workspaces"
  ]
}
