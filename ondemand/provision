#!/usr/bin/env bash

vc="$1"; shift

if [[ -f .done ]]; then
    exec socat - TCP:dev-x-default-x-vcluster.${vc}:80
else
    echo HTTP/1.1 200
    echo
    cat index.html

    # provision infra for user
    if flock -n .doing -c 'echo making some infra'; then
        sleep 5
        touch .done
        rm -f .doing
        sleep 60
        rm -f .done
    fi
fi
