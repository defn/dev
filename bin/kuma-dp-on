#!/usr/bin/env bash

function main {
	set -efu

	sudo rm -f /tmp/dev-token /tmp/kuma-al-dev-default.sock
	kumactl generate dataplane-token | sudo sudo -u kuma tee /tmp/dev-token >/dev/null

	exec sudo -u kuma \
		kuma-dp run \
			--dataplane-token-file=/tmp/dev-token --dataplane-file=dev-dp.yaml
			--cp-address=https://100.103.25.109:5678 \
}

main "$@"
