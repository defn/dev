#!/usr/bin/env bash

set -exfu

exec 1>>/tmp/wh.log 2>&1

function main {

    local event=$1; shift
    local repo=$1; shift
    local ref=$1; shift
    local commit=$1; shift

    local branch="${ref##refs/heads/}"

    if [[ "${branch}" != "${WH_BRANCH:-}" ]]; then
        echo "ERROR: payload branch ${branch} does not match working branch ${WH_BRANCH:-}" 1>&2
        return 1
    fi
    
    mkdir -p /tmp/meh
    cd /tmp/meh
    git clone -b "$branch" --depth 1 "$repo" "$commit" || true
    cd "$commit"
    git fetch
    git reset --hard "$commit"

    time (
        nix build
        (
            nix flake archive --json | jq -r '.path,(.inputs|to_entries[].value.path)'
            nix build --json | jq -r '.[].outputs | to_entries[].value'
        ) | xargs nix copy --verbose --to 'file:///cache/nix?compression-level=0&parallel-compression=true&secret-key=/tmp/cache-priv-key.pem'
        (
            nix flake archive --json | jq -r '.path,(.inputs|to_entries[].value.path)'
            nix build --json | jq -r '.[].outputs | to_entries[].value'
        ) | xargs nix copy --verbose --to 'file:///tmp/cache/nix?compression-level=0&parallel-compression=true'
    )

    set +x

    sync
    echo "done: $commit"
}

main "$@"
