#!/usr/bin/env bash

if [[ -n ${_BROWSER-} ]]; then
	echo "ERROR: browser already called: ${_BROWSER}" 1>&2
	exit 1
fi

export _BROWSER="$0"

function main {
	case "${VSCODE_GIT_ASKPASS_MAIN-}" in
	*code-server*)
		exec "${VSCODE_GIT_ASKPASS_MAIN%%/extensions/*}/bin/helpers/browser.sh" "$@"
		;;
	*/.vscode-server/*)
		exec "${VSCODE_GIT_ASKPASS_MAIN%%/extensions/*}/bin/helpers/browser.sh" "$@"
		;;
	*)
		if [[ -x /usr/bin/open ]]; then
			exec /usr/bin/open "$@"
		else
			exec browser.sh "$@"
		fi
		;;
	esac
}

main "$@"
