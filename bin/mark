#!/usr/bin/env bash
# mark - Display styled text using gum or echo as fallback
#
# Usage: mark [text...]
#
# This script displays text with styling using the gum tool if available.
# If gum is not installed, it falls back to plain echo output.
# All arguments are combined into a single message and displayed.

gm="$(type -P gum)"
if [[ -x ${gm} ]]; then
	gm='gum style --width 40 --border normal --margin 1 --padding "1 2" --border-foreground 212'
else
	gm="echo"
fi

m="$*"
m="${m// /\\ }"

echo
case "${1-}" in
*)
	eval "${gm}" "${m}"
	;;
esac
echo
