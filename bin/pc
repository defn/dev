#!/usr/bin/env bash

function main {
	case "${1:-}" in
		install)
			(
				cat <<EOF
#!/usr/bin/env bash

ARGS=(hook-impl -f --config=.pre-commit-config.yaml --hook-type=pre-commit)
HERE="\$(cd "$(dirname "\$0")" && pwd)"
ARGS+=(--hook-dir "\$HERE" -- "\$@")

exec pc "\${ARGS[@]}"

EOF
			) > .git/hooks/pre-commit
			chmod 755 .git/hooks/pre-commit
			;;
		*)
			if [[ -d .cache/pre-commit ]]; then
				env PRE_COMMIT_HOME="$(pwd)/.cache/pre-commit" pre-commit "$@"
			else
				pre-commit "$@"
			fi
			;;
	esac
}

main "$@"
