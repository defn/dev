#!/usr/bin/env bash

unset STARSHIP_NO

if [[ -z ${WORKDIR-} ]]; then
	first_workdir=1
else
	first_workdir=
fi

export WORKDIR="${1:-${HOME-}}"

if [[ ${WORKDIR} == '${workspaceFolder}' ]]; then
	WORKDIR="${HOME-}"
fi

export workdir="${WORKDIR}"
case "$(declare -p TMOUT | grep ^declare | awk '{print $2}')" in
	*r*)
		true
		;;
	*)
		export TMOUT=3600
		;;
esac
export HISTSIZE=100000

if test -f ~/.bash_profile; then
	source ~/.bash_profile
fi

if [[ -n ${first_workdir} ]]; then
	lockfile="/tmp/.bash_entrypoint.lock"

	# Attempt to acquire the lock without blocking
	if flock -n 200; then
		if ! test -r /tmp/.bash_entrypoint.done; then
			touch /tmp/.bash_entrypoint.done
		fi
	fi 200>$lockfile

	unset lockfile
fi
