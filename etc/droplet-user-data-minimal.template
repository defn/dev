#!/bin/bash

set -efu

mkdir ~/tmp
cd ~/tmp

echo ssh-rsa  cardno:8 624 146 > authorized_keys
install -m 0600 -o ubuntu -g ubuntu authorized_keys ~ubuntu/.ssh/authorized_keys
rm -f authorized_keys

sudo apt update
sudo apt install -y pinentry-tty
sudo ln -nfs /usr/bin/pinentry /usr/local/bin/

(cd /usr/local/bin && sudo curl -sSL -o earthly https://github.com/earthly/earthly/releases/download/v0.6.25/earthly-linux-amd64 && sudo chmod 755 earthly)
